@model Producto
<h1>Ingresar datos del producto</h1>

<form asp-action="Agregar">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="formFile" class="form-label">Nombre</label>
                <input type="text" name="NombreProducto" class="form-control Nombre" />
            </div>
            <div class="form-group">
                <label for="formFile" class="form-label">Precio</label>
                <input type="text" name="PrecioProducto" class="form-control Precio" />
            </div>
            <div class="form-group">
                <label for="formFile">Descripcion</label>
                <div class="input-group">
                    <textarea class="form-control Descripcion" name="DescripcionProducto" rows="3"></textarea>
                </div>
            </div>

        </div>
        <!--Categoria del Producto-->
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdCategoria" class="control-label"></label>
                <select asp-for="IdCategoria" class="form-control Categoria" asp-items="ViewBag.Categoria"></select>
                <span asp-validation-for="IdCategoria" class="text-danger"></span>
            </div>
            <div class="mb-auto">
                <label for="formfile" class="form-label">Agregar Imagen</label>
                <input type="file" name="RutaProductoImagen" class="form-control-file Imagen" />
            </div>
        </div>
    </div>

    <hr />

    <div class="btn-group">
        <input type="submit" value="Guardar" class="btn btn-success" />
    </div>
</form>

