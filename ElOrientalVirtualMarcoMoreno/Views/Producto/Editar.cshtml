@model Producto
<h1>Editar datos del producto</h1>

<form asp-action="EditarProducto">
    
    <div class="row">
        <div class="col-md-6">
            <input class="id" type="hidden" name="IdProducto" value="@Model.IdProducto" />
            <div class="form-group">
                <label for="formFile" class="form-label">Nombre</label>
                <input type="text" name="NombreProducto" value="@Model.NombreProducto" class="form-control" />
            </div>
            <div class="form-group">
                <label for="formFile" class="form-label">Precio</label>
                <input type="text" name="PrecioProducto" value="@Model.PrecioProducto" class="form-control" />
            </div>
            <div class="form-group">
                <label for="formFile">Descripcion</label>
                <div class="input-group">
                    <textarea class="form-control" name="DescripcionProducto" rows="3">@Model.DescripcionProducto</textarea>
                </div>
            </div>

        </div>
        <!--Categoria del Producto-->
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdCategoria" class="control-label"></label>
                <select value="@Model.IdCategoria" asp-for="IdCategoria" class="form-control" asp-items="ViewBag.Categoria"></select>
                <span asp-validation-for="IdCategoria" class="text-danger"></span>
            </div>
            <div class="mb-auto">
                <label for="formfile" class="form-label">Agregar Imagen</label>
                <input value="@Model.RutaProductoImagen" type="file" name="RutaProductoImagen" class="form-control-file" />
            </div>
        </div>
    </div>

    <hr />

    <div class="btn-group">
        <input type="submit" value="Guardar" class="btn btn-success" />
    </div>
</form>
