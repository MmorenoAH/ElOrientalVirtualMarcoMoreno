@model List<Propietario>

<h1>Propietario</h1>

<p>
    <a asp-action="Crear" class="btn btn-success">Crear</a>
</p>

<table class="table table-striped col-12 " id="tablaProp">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Fecha de Creacion</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var prop in Model)
        {
            <tr>
                <td>@Html.DisplayFor(c => prop.IdPropietario)</td>
                <td>@Html.DisplayFor(c => prop.NombrePropietario)</td>
                <td>@Html.DisplayFor(c => prop.FechaCeacion)</td>
                <td>
                    <a class="btn btn-info btnEditar" href="@Url.Action("EditarPropietario", new{id = prop.IdPropietario})">Editar</a>
                    <a class="btn btn-danger btnEliminar" href="@Url.Action("EliminarPropietario", new{id= prop.IdPropietario})">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Descripción</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <span class="valor-descripcion"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $('#tablaProp').DataTable();
    </script>
}