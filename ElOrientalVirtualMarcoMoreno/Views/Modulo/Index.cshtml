@model List<ModuloVirtual>

<h1>Crear Usuario</h1>

<p>
    <a asp-action="Crear" class="btn btn-success">Crear</a>
</p>
<div class="table-responsive">
<table class="table col-12" id="tablaProducto">
    <thead class="table-dark">
        <tr>
            <th>Propietario</th>
            <th>Descripcion</th>
            <th>Fecha de Creacion</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mod in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => mod.NombrePropietario)</td>
                <td>@Html.DisplayFor(m => mod.DescripcionModulo)</td>
                <td>@Html.DisplayFor(m => mod.FechaCreacion)</td>
                <td>
                    <a class="btn btn-success btnProductos" href="@Url.Action("MostrarProducto", new{id = mod.IdModulo})">Productos</a>
                    <a class="btn btn-info btnEditar" href="@Url.Action("EditarModulo", new{id = mod.IdModulo})">Editar</a>
                    <a class="btn btn-danger btnEliminar" href="@Url.Action("EliminarModulo", new{id = mod.IdModulo})">Eliminar</a>
                </td>
            </tr>

        }
    </tbody>
</table>
</div>
@section Scripts{
    <script>
        $('#tablaProducto').DataTable();

    </script>
}