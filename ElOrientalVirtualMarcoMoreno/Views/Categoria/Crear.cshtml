

<h1>Crear Categoria</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="formFile" class="form-label">Nombre</label>
                <input type="text" name="NombreCategoria" class="form-control Nombre" />
            </div>
            <div class="form-group">
                <label for="formFile" class="form-label">Descripcion</label>
                <div class="input-group">
                    <textarea class="form-control Descripcion" name="DescripcionCategoria" rows="3"></textarea>
                </div>
            </div>

            <hr />
            <div class="btn-group">
                <a href="javascript:void(0)" id="btnGuardar" class="btn btn-success">Guardar </a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/Catergoria.js"></script>
}


