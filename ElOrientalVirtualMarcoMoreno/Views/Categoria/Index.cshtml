@model List<Categoria>

<h1>Categorias</h1>

<p>
    <a asp-action="Crear" class="btn btn-success">Crear</a>
</p>

<table class="table table-striped table-responsive">
    <thead class="table-dark">
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombre
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Fecha de Creacion
            </th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var Cat in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(c => Cat.IdCategoria)
                </td>
                <td>
                    @Html.DisplayFor(c => Cat.NombreCategoria)
                </td>
                <td>
                    @Html.DisplayFor(c => Cat.DescripcionCategoria)
                </td>
                <td>
                    @Html.DisplayFor(c => Cat.FechaCreacion, "{0:dd/MM/yyyy}")
                </td>
                <td>
                    <a id="btnEditar" href="@Url.Action("EditarCategoria", new{id = Cat.IdCategoria})">Editar</a>
                    <a id="btnEliminar" href="@Url.Action("EliminarCategoria", new{id= Cat.IdCategoria})">Eliminar</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
